{
  "compilerOptions": {
    "outDir": "./build/es6",
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "noEmitHelpers": false,
    "noImplicitAny": true,
    "lib": ["dom", "es2015", "es2015.iterable"],
    "baseUrl": "src",
    "typeRoots": [
      "node_modules/@types"
    ]
  },

  "files": [
    "src/module.ts"
  ],

  "exclude": [
    "node_modules",
    "release",
    "build",
    "aot"
  ],
  "angularCompilerOptions": {
    "genDir": "aot",
    "annotateForClosureCompiler": true,
    "skipTemplateCodegen": true
 }
}